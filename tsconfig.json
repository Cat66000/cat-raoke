{
  "compilerOptions": {
    "target": "es2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strict": true,
    "outDir": "./built",
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".yarn", "**/*.spec.ts"]
}
